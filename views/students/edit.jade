extends ../layout

block content

  .container-fluid
    .row
      .col-md-offset-3.col-md-6
          h2.text-center= title
          br
          form.form-horizontal(action = '/students/edit/#{edit.Student_id}' method = 'post')
            .form-group
              label.col-md-4.control-label(for='Student_number') Student Number:
              .input-group.col-md-8
                span#basic-addon1.input-group-addon F
                input#Student_number.form-control(type='text', name='Student_number', value=edit.Student_number.substring(1, 9), maxlength="8")
              .row
                .col-md-8.col-md-offset-4
                  span#checkID.checkID

            .form-group
              label.col-md-4.control-label(for='First_name') First Name:
              .input-group.col-md-8
                input#First_name.form-control(type='text', name='First_name', value=edit.First_name)

            .form-group
              label.col-md-4.control-label(for='Last_name') Last Name:
              .input-group.col-md-8
                input#Last_name.form-control(type='text', name='Last_name', value=edit.Last_name)

            .form-group
              label.col-md-4.control-label(for='Major') Major:
              .input-group.col-md-8
                select#Major.form-control(name='Major') Major:
                 option(value='MS-IT' selected = edit.Major=='MS-IT') MS-IT
                 option(value='MBA' selected = edit.Major=='MBA') MBA
                 option(value='Nursing' selected = edit.Major=='Nursing') Nursing
                 option(value='Pharmacy' selected = edit.Major=='Pharmacy') Pharmacy
                 option(value-'ESL' selected = edit.Major=='ESL') ESL
                 option(value='Computer Science' selected = edit.Major=='Computer Science') Computer Science
                 option(value='other' selected = edit.Major=='other') other                 

            .form-group
              label.col-md-4.control-label(for='Degree') Degree:
              .input-group.col-md-8
                select#Degree.form-control(name='Degree')
                  option(value='undergraduate' selected = edit.Degree== 'undergraduate') Undergraduate Student
                  option(value='Graduate' selected = edit.Degree == 'graduate') Graduate Student

            .form-group
              .input-group.col-md-offset-4.col-md-8
                input.btn.btn-primary.btn-block(type='submit', value='Update')