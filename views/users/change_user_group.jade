extends ../layout

block content
  .container-fluid
    .row
      .col-md-3
      .col-md-6
          h2.text-center User Sign Up
          br
          form.form-horizontal(action='/users/change_user_group_email/#{userid}' method='post')
            .form-group
              label.col-md-3.control-label(for='email') Email
              .col-md-9
                input#email.form-control(type='text' name='email' value= result.email)

            .form-group
              label.col-md-3.control-label(for='user_group') User Group
              .col-md-9
                select#user_group.form-control(name='user_group')
                  option(value='super_user' selected= result.User_group == 'super_user') Student Worker
                  option(value='interviewer' selected= result.User_group == 'interviewer') Interviewer
                  option(value='instructor' selected= result.User_group == 'instructor') Instructor

            .form-group
              .row
                .col-md-offset-3.col-md-9           
                  input.btn.btn-primary.btn-block(type='submit' value="Update")
            .form-group
              .row
                .col-md-offset-3.col-md-9 
                  a.btn.btn-primary.btn-block(href='/users/#{userid}') Cancel